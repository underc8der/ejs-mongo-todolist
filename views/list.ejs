<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To do List</title>
    <link rel="stylesheet" href="css/styles.css">
</head>
<body>
    <div class="box" id="heading">
        <h1>It's a <%= day %>!</h1>
    </div>
    
    <div class="box">
        <% items.forEach((item) => { %>
            <form action="items/update" method="post">
                <input type="hidden" name="hiddenItemId" value="<%= item.id %>">
                <input type="hidden" name="hiddenItemCompleted" value="<%= item.completed %>">
                <div class="item">
                    <% if(item.completed){ %>
                        <input type="checkbox" value="<%= item.id %>" onchange="this.form.submit()" checked>
                    <%}else{%>
                        <input type="checkbox" value="<%= item.id %>" onchange="this.form.submit()">
                    <%}%>
                    <p><%= item.subject %></p>
                </div>
            </form>
        <% }); %>

        <form class="item" action="items/" method="post">
            <input type="text" name="item" placeholder="New item" autocomplete="off">
            <button type="submit">+</button>    
        </form>
    </div>    
</body>
</html>